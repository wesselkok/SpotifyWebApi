@using SpotifyApp.Core.Services.SpotifyPlaylistService.Models.Response

@{
    ViewData["Title"] = "Tracks";
    List<SpotifyTrackModel> tracks = (List<SpotifyTrackModel>)ViewData["Tracks"];
    string playlistId = (string)ViewData["PlaylistId"];
}


<h1 class="display-4">Tracks</h1>
<!-- Button trigger modal -->
<a type="button" class="btn btn-primary" asp-area="" target="_blank" asp-controller="Spotify" asp-action="Backup" asp-route-playlistId="@(playlistId)" style="top: 0; right: 0; position: absolute;">
    Create backup
</a>

<div class="text-center">
    <div class="container" style="margin-top: 20px; padding: 0;">
        <div class="row justify-content-center">
            @foreach (SpotifyTrackModel track in tracks)
            {
                <div class="col-sm-4" style="margin-bottom: 20px;">
                    <div class="card" style="height: 100%;">
                        @if (!string.IsNullOrWhiteSpace(track.Image))
                        {
                            <img src="@(track.Image)" class="card-img-top" alt="...">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@(track.Name)</h5>

                        </div>
                        <div class="card-footer">
                            <a href="@(track.Link)" class="card-link" target="_blank">Listen track on spotify</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>