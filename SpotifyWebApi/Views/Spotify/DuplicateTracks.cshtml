@using SpotifyApp.Core.Services.SpotifyPlaylistService.Models.Response

@{
    ViewData["Title"] = "Duplicate tracks";
    List<SpotifyDuplicateResult> duplicateTracks = (List<SpotifyDuplicateResult>)ViewData["DuplicateTracks"];
}

<div class="text-center">
    <h1 class="display-4">Duplicate Tracks</h1>

    <div class="container" style="margin-top: 20px;">
        <div class="row justify-content-center">
            @foreach (SpotifyDuplicateResult duplicateTrack in duplicateTracks)
            {
                <div class="col-sm-4" style="margin-bottom: 20px;">
                    <div class="card" style="width: 18rem;height: 100%;">
                        @if (!string.IsNullOrWhiteSpace(duplicateTrack.Track.Image))
                        {
                            <img src="@(duplicateTrack.Track.Image)" class="card-img-top" alt="...">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@(duplicateTrack.Track.Name)</h5>
                            <p class="card-subtitle">Count: @(duplicateTrack.Count)</p>
                            @*<a href="" class="btn btn-primary" target="_blank">Delete duplicate track(s)</a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
